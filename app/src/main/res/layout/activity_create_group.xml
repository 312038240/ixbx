<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jim.ixbx.view.activity.CreateGroupActivity">
    <com.jim.ixbx.view.views.ArrowHeadView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/head_height"/>
    <android.support.design.widget.TextInputEditText
        android:id="@+id/edittext"
        android:layout_marginTop="@dimen/dp_20"
        android:hint="请输入群名称"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_marginTop="@dimen/dp_20"
        android:text="头像"
        android:textSize="@dimen/sp_20"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="@dimen/avater_size"
        android:layout_height="@dimen/avater_size"
        android:src="@mipmap/avatar3"
        />
</LinearLayout>
